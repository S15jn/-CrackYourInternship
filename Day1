public class gfgs {
  // ---------------------------------------------------------------------------------
  // ------------------------------ABSOULTE VALUE---------------------------------------------------
        public static int  absoluteValue(int n) {
        if(n<0){
            return Math.abs(n);
        }

        return n;
    }
  // ---------------------------------------------------------------------------------
  // -------------------------------CELSIUS TO FAHRENHEIT-------------------------------------------------
        public static double covertToFahrenheit(double c) {
        double F=(c*9/5)+32;
        return F;
        
    }
  // ---------------------------------------------------------------------------------
  // ---------------------------------QUADRATIC EQUATION ROOTS------------------------------------------------
  // ---------------------------------------------------------------------------------
  public static void main(String[] args) {
      ---------------------------------------------------------------------------------
      System.out.println(  absoluteValue(42));
      ---------------------------------------------------------------------------------
    System.out.println(covertToFahrenheit(23.0));
    }
}
